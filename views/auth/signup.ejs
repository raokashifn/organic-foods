                 </div> -->
                <div class="field">
                    <input type="password" name="password" placeholder="Password" required>
                  </div>
                <div class="field">
                   <input type="password" name="ePassword" placeholder="Confirm password" required>
                </div>
                <div class="field btn">
                   <div class="btn-layer"></div>
                  <input type="submit" value="Signup"> 
                   <button type="submit" value="Signup"> </button>
                </div>
                <div class="signup-link">
                    already have account ? <a href="/auth/login">Signin now</a>
                 </div>
                  
               </form>
